<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.examsys.oes.mapper.FileMapper">

    <select id="queryByTrainId" resultType="com.examsys.oes.entity.UserFile">
        SELECT * FROM "file" WHERE trainId = #{trainId}
    </select>

    <insert id="save">
        INSERT INTO "file" (id, fileName, ext, path, size, type, trainId)
        VALUES (#{id}, #{fileName}, #{ext}, #{path}, #{size}, #{type}, #{trainId})
    </insert>

    <select id="queryByUserFileId" resultType="com.examsys.oes.entity.UserFile">
        SELECT * FROM "file" WHERE id = #{id}
    </select>

    <update id="update">
        UPDATE "file" SET download_counts = #{downloadCounts} WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM "file" WHERE id = #{id}
    </delete>

    <select id="findMax" resultType="int">
        SELECT * FROM "file"
        ORDER BY id DESC
            LIMIT 1
    </select>

</mapper>
